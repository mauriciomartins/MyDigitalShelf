<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDigitalShelf.View.SearchItemPage"
             Title="Search List">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Select" x:Name="SelectItemButton" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry Placeholder="Ex. Digital Fortress" Text="{Binding SearchName}"/>
            <Button Text="GO" x:Name="SearchButton" Command="{Binding SearchItemCommand}"/>
            <ActivityIndicator IsRunning="{Binding IsBusy}"  IsVisible="{Binding IsBusy}"/>
            <ListView  x:Name="ItemList" ItemsSource="{Binding ItemList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell  ImageSource="{Binding Image}" Text="{Binding Name}" Detail="{Binding Writer}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>